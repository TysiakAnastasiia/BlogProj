{
  "name": "blogproj-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for React Frontend and Express Backend",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix my-blog-frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "npm install --prefix my-blog-frontend",
    "build-client": "npm run build --prefix my-blog-frontend",
    "render-build": "npm install && npm run install-client && npm run build-client"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.4",
    "router": "^1.3.8"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0"
  }
}